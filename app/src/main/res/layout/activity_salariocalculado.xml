<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Salariocalculado">

    <ImageView
        android:id="@+id/imagen2"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="#000000"
        android:contentDescription="fondo negro salario"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/devolvitis2"
        android:layout_width="38dp"
        android:layout_height="34dp"
        android:contentDescription="BotÃ³n de retroceso"
        app:layout_constraintTop_toTopOf="@+id/imagen2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALARIO"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/imagen2"
        app:layout_constraintBottom_toBottomOf="@+id/imagen2"
        app:layout_constraintStart_toEndOf="@+id/devolvitis2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALARIO CALCULADO:"
        android:textSize="20sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@+id/imagen2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HORAS TRABAJADAS:"
        android:textSize="20sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/horasTrabajadasEditText"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:hint="0"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/text3"
        app:layout_constraintBottom_toBottomOf="@+id/text3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HORAS DOMINICALES:"
        android:textSize="20sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/horasDominicalesEditText"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:hint="0"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/text4"
        app:layout_constraintBottom_toBottomOf="@+id/text4"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HORAS EXTRA:"
        android:textSize="20sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@+id/text4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/horasExtraEditText"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:hint="0"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/text5"
        app:layout_constraintBottom_toBottomOf="@+id/text5"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/agregarHorasButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Agregar Horas"
        android:textColor="#FFFFFF"
        android:backgroundTint="#673AB7"
        app:layout_constraintTop_toBottomOf="@+id/text5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAGO POR HORA:"
        android:textSize="20sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@+id/agregarHorasButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/pagoPorHoraText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000.0"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@+id/text7"
        app:layout_constraintBottom_toBottomOf="@+id/text7"
        app:layout_constraintStart_toEndOf="@+id/text7"
        android:layout_marginStart="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
